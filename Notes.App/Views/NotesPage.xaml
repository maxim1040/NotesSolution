<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Notes.App.ViewModels"
             xmlns:models="clr-namespace:Notes.App.Models"
             x:Class="Notes.App.Views.NotesPage"
             x:DataType="vm:NotesViewModel"
             Title="Notities">

	<ContentPage.ToolbarItems>
		<ToolbarItem Text="Nieuw" Command="{Binding NewNoteCommand}" />
		<ToolbarItem Text="Refresh" Command="{Binding RefreshCommand}" />
		<ToolbarItem Text="Uitloggen" Command="{Binding LogoutCommand}" Priority="2" Order="Secondary"/>
	</ContentPage.ToolbarItems>

	<Grid Padding="16" RowDefinitions="Auto,*">
		<Label Text="Alle notities" FontSize="24" FontAttributes="Bold" />

		<CollectionView Grid.Row="1"
						ItemsSource="{Binding Items}">
			<CollectionView.EmptyView>
				<VerticalStackLayout Padding="24" Spacing="8" HorizontalOptions="Center" VerticalOptions="Center">
					<Label Text="Nog geen notities" FontSize="18" HorizontalTextAlignment="Center"/>
					<Button Text="Maak je eerste notitie" Command="{Binding NewNoteCommand}" />
				</VerticalStackLayout>
			</CollectionView.EmptyView>

			<CollectionView.ItemTemplate>
				<DataTemplate x:DataType="models:NoteModel">
					<!-- Swipe voor Verwijderen -->
					<SwipeView>
						<SwipeView.RightItems>
							<SwipeItems Mode="Reveal">
								<SwipeItem Text="Verwijder"
										   BackgroundColor="#e11d48"
										   Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteFromListCommand}"
										   CommandParameter="{Binding .}" />
							</SwipeItems>
						</SwipeView.RightItems>

						<Frame Margin="0,8" Padding="14" HasShadow="True" CornerRadius="16">
							<HorizontalStackLayout Spacing="12">
								<Label Text="{Binding Title}" FontSize="18" FontAttributes="Bold"
									   VerticalOptions="Center" LineBreakMode="TailTruncation" />
								<Label Text="{Binding UpdatedAtUtc, StringFormat='{0:dd/MM HH:mm}'}"
									   FontSize="12" TextColor="{DynamicResource SecondaryTextColor}"
									   HorizontalOptions="EndAndExpand" VerticalOptions="Center"/>
							</HorizontalStackLayout>

							<!-- Tik op het kaartje opent detail -->
							<Frame.GestureRecognizers>
								<TapGestureRecognizer
								  Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.OpenNoteCommand}"
								  CommandParameter="{Binding .}" />
							</Frame.GestureRecognizers>
						</Frame>
					</SwipeView>
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>
	</Grid>
</ContentPage>
